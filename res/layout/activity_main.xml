<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tictactoe.MainActivity"
    tools:ignore="HardcodedText" >

     <TextView
         android:id="@+id/dialogue"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_marginBottom="35sp"
         android:gravity="center_horizontal"
         android:text="Click a button to start"
         android:textColor="#ffffff"
         android:textSize="20sp" />

     <Button
         android:id="@+id/seven"
         android:layout_width="90sp"
         android:layout_height="90sp"
         android:layout_above="@+id/dialogue"
         android:layout_alignRight="@+id/dialogue"
         android:layout_marginBottom="52dp"
         android:text=" "
         android:textSize="70sp" />

     <Button
         android:id="@+id/three"
         android:layout_width="90sp"
         android:layout_height="90sp"
         android:layout_alignLeft="@+id/dialogue"
         android:layout_alignTop="@+id/two"
         android:padding="0sp"
         android:text=" "
         android:textSize="70sp" />

     <Button
         android:id="@+id/six"
         android:layout_width="90sp"
         android:layout_height="90sp"
         android:layout_alignLeft="@+id/three"
         android:layout_below="@+id/three"
         android:text=" "
         android:textSize="70sp" />

     <Button
         android:id="@+id/nine"
         android:layout_width="90sp"
         android:layout_height="90sp"
         android:layout_alignBaseline="@+id/eight"
         android:layout_alignBottom="@+id/eight"
         android:layout_alignLeft="@+id/six"
         android:text=" "
         android:textSize="70sp" />

     <Button
         android:id="@+id/eight"
         android:layout_width="90sp"
         android:layout_height="90sp"
         android:layout_alignBaseline="@+id/seven"
         android:layout_alignBottom="@+id/seven"
         android:layout_centerHorizontal="true"
         android:text=" "
         android:textSize="70sp" />

     <Button
         android:id="@+id/four"
         android:layout_width="90sp"
         android:layout_height="90sp"
         android:layout_above="@+id/seven"
         android:layout_alignLeft="@+id/seven"
         android:text=" "
         android:textSize="70sp" />

     <Button
         android:id="@+id/five"
         android:layout_width="90sp"
         android:layout_height="90sp"
         android:layout_above="@+id/eight"
         android:layout_alignLeft="@+id/eight"
         android:text=" "
         android:textSize="70sp" />

     <Button
         android:id="@+id/one"
         android:layout_width="90sp"
         android:layout_height="90sp"
         android:layout_above="@+id/four"
         android:layout_alignLeft="@+id/four"
         android:text=" "
         android:textSize="70sp" />

     <Button
         android:id="@+id/two"
         android:layout_width="90sp"
         android:layout_height="90sp"
         android:layout_above="@+id/five"
         android:layout_alignLeft="@+id/five"
         android:text=" "
         android:textSize="70sp" />
    
</RelativeLayout>
